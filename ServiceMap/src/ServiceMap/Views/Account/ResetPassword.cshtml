@{
    Layout = "_MvcLayout";
}

@model ResetPasswordModel

@* TODO style *@
<div class="panel-body" style="margin-top: 5%;">
    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Nowe hasło
                </div>
                <div class="panel-body center-block">
                    <form asp-action="ResetPassword" asp-controller="Account" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <input asp-for="Token" type="hidden" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" readonly="readonly" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" maxlength="12" placeholder="Hasło (wymagane)" />
                                <span class="input-group-addon btn"
                                      title="Hasło:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"
                                      data-content="Wymagana długość hasła to minimum 8 i maksimum 12 znaków. Rozróżniane są duże i małe litery. Hasło musi zawierać litery, co najmniej jedną cyfrę oraz znak specjalny: '_' '!' '@@' '#' '$' '%' '^' '&' '*' '(' ')' '+' '-' '='"
                                      data-toggle="popover"
                                      placement="right"><i class="fa fa-1x fa-question-circle-o" aria-hidden="true"></i></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control" maxlength="12" placeholder="Potwierdznie hasła (wymagane)" />
                                <span class="input-group-addon btn"
                                      title="Hasło:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"
                                      data-content="Wymagana długość hasła to minimum 8 i maksimum 12 znaków. Rozróżniane są duże i małe litery. Hasło musi zawierać litery, co najmniej jedną cyfrę oraz znak specjalny: '_' '!' '@@' '#' '$' '%' '^' '&' '*' '(' ')' '+' '-' '='"
                                      data-toggle="popover"
                                      placement="right"><i class="fa fa-1x fa-question-circle-o" aria-hidden="true"></i></span>
                            </div>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-sm-orange" type="submit">Resetuj hasło</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
